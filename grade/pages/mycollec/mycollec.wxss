/* pages/mycollec/mycollec.wxss */
.container{
  width: 100%;
  height: 100vh;
  overflow: hidden;
}
.c_back{
  background-color:#EBF0F5; 
}
.nav{
  width: 100%;
  height: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 24rpx;
}
.nav .back{
  font-size: 34rpx;
  color: #818D99;
  /* font-weight: bold; */
  margin-left: 33rpx;
}
.nav .sure{
  font-size: 34rpx;
  color: #5CB3FF;
  font-weight: bold;
  margin-right: 33rpx;
}
.nav .tab{
  width: 400rpx;
  height: 72rpx;
  border: 2rpx solid rgba(196,200,204,1);
  box-sizing: border-box;
  display: flex;
  border-radius: 36rpx;
}
.tab .tabar{
  height: 100%;
  width: 50%;
  line-height: 72rpx;
  text-align: center;
  color: #1D2023;
  font-size:34rpx; 
}
.tab .tab_active{
  background-color: #565E66;
  color: #fff;
  border-radius: 36rpx;
}
.cole_input{
  width: 686rpx;
  height: 72rpx;
  border-radius: 16rpx;
  background-color: #EBF0F5;
  line-height: 72rpx;
  margin: 48rpx auto;
}
.cole_input input{
  width: 100%;
  height: 100%;
  padding: 0 34rpx;
  color: #1D2023;
  font-size: 28rpx;
}
.useTag{
  width: 686rpx;
  margin: 0 auto;
}
.useTag .title{
  font-size: 34rpx;
  color: #1D2023;
  font-weight: bolder;
  margin-bottom: 31rpx;
}
.useTag .taglist{
  width: 100%;
  height: auto;
  display: flex;
  flex-wrap: wrap;
}
.tag{
  font-size: 28rpx;
  color: #1D2023;
  padding: 15rpx 25rpx;
  border: 1rpx solid #D7DCE0;
  border-radius: 8rpx;
  box-sizing: border-box;
  margin-right: 16rpx;
  margin-bottom: 24rpx;
}
.taglist .hover_tab{
  color: #5CB3FF;
  background-color: #D8EDFF;
  border-color: #5CB3FF;
}
.paparList{
  width: 686rpx;
  max-height: calc(100vh - 140rpx);
  overflow: scroll;
  -webkit-overflow-scrolling: touch;
  margin: 40rpx auto 0;
}
.option{
  width: 100%;
  height: auto;
  border-radius: 16rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  position: relative;
  margin-bottom: 24rpx;
}
.option .img{
  width: 160rpx;
  height: 100%;
  background-color: #C9CACA;
  border-radius:16rpx 0rpx 0rpx 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.img image{
  height: 170rpx;
  width: 98%;
}
.option .info{
  margin-left: 32rpx;
  margin-top: 24rpx;
}
.info .p_tag{
  color: #5CB3FF;
  background-color: #D8EDFF;
  border-color: #5CB3FF;
  margin-bottom: 24rpx;
}
.info .text{
  max-width: 329rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 28rpx;
  color: #1D2023;
  margin-bottom: 20rpx;
}
.close{
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 32rpx;
  right: 32rpx;
}
image{
  width: 100%;
  height: 100%;
  display: block;
}