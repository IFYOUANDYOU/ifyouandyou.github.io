/* pages/setRatio/setRatio.wxss */
.set-ratio-wrapper {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  z-index: 999;
  transition: all 0.5s;
}
.set-ratio-wrapper .set-ratio {
  width: 520rpx;
  padding: 0 30rpx 15rpx;
  background-color: #fff;
  border-radius: 12rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.layer-ratio {
  height: 100%;
  width: 100%;
  background: rgba(0, 0, 0, 0.5);
}
.set-ratio .title-layer{
  margin: 20rpx 0;
  width: 100%;
  font-size: 26rpx;
  text-align: center;
}
.set-ratio .item{
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.set-ratio .item view{
  font-size: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.set-ratio .item input{
  font-size: 32rpx;
  text-align: center;
  height: 36rpx;
  width: 80rpx;
  margin: 0 10rpx 0 20rpx;
  background: #fff;
  border: 1rpx solid #4e4e4e;
}
.set-ratio .btn-wrapper {
  padding: 20rpx 60rpx 20rpx; 
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.set-ratio .btn-wrapper view{
  border-radius: 35px;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #cdcdcd;
  font-size: 26rpx;
  margin-top: 15rpx;
}
.set-ratio .btn-wrapper .active{
  background: #ffc800;
}
