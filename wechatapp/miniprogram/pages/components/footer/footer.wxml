        <view  class="half-circle"></view>
        <view  class="half-circle-mask"></view>
        <view class='text'>扫描试卷</view>
      </view>

      <view wx:if="{{type!=2}}"  bindtap="jumpTwo2" class="item img" style="{{type==2?'color:#19191A':''}}">
