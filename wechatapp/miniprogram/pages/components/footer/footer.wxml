  <view class="footer">
    <view class="footer-wrapper">
      <view class="item" style="{{type==1?'color:#1D2023':''}}" bindtap="jumpOne">
        <image mode="scaleToFill" wx:if="{{type==1}}" src="/image/index/score_icon_active.png"/>
        <image mode="scaleToFill" wx:else src="/image/index/score_icon.png"/>
        <view class='text'>成绩</view>
      </view>

      <view wx:if="{{type==2}}"  bindtap="jumpTwo" class="item img" style="{{type==2?'color:#19191A':''}}">
