        <view class='text'>考试</view>
      </view>

      <view class="item"  style="{{type==3?'color:#19191A':''}}" bindtap="jumpThree">
        <image mode="scaleToFill" wx:if="{{type==3}}" src="/image/index/user_icon_active.png"/>
        <image mode="scaleToFill" wx:else src="/image/index/user_icon.png"/>
        <view>我的</view>
      </view>  
    </view>
