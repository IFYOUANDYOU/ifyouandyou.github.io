<view class='chart-wrapper'>

  <view class='overview'>
    <view class='title'>
      <image mode="scaleToFill"  src="/image/cuotiji/sldb.png"></image>三率对比
    </view>
  </view>
  <!-- <view class="ratio-title">本次考试三率对比</view>
  <view class="ratio-tap">
    <image style="height: 24rpx;width: 24rpx;" src="../../../image/score/question.png" mode="aspectFit" />
    <text bindtap='showSet'>三率设置</text>
  </view> -->
  <!-- <slot name="examRatio"></slot> -->

  <view class="container-column">
    <ff-canvas id="column-dom-ratio" canvas-id="column-ratio" opts="{{ opts }}"></ff-canvas>

    <view class='change-ratio'>
      <view class='item'  bindtap='changeTop'>0-60%</view>
      <view class='item'  bindtap='changeTop'>60-100%</view>
      <view class='item'  bindtap='changeTop'>90-100%</view>
    </view>
  </view>

