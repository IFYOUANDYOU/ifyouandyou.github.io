    width="{{width}}" height="{{height}}"
  /> -->

  <!-- <set-ratio is-show="{{isShow}}" exam-id="{{examId}}"  bindmyevent="onMyEvent" /> -->
</view>

<cover-view class='setTop' wx:if="{{showTop}}">
  <cover-view class='wrapper'>
    <cover-view class='cancle' bindtap='cancle'>取消</cover-view>
    <cover-view class='right'>
      <cover-view class='input-wrapper' bindtap='tapInput'>
          <cover-view class='text' wx:if="inputInfo">{{inputInfo}}</cover-view>
          <input focus='{{inputFocus}}' bindblur='blurInput' placeholder="" maxlength="3" type="number" auto-focus />
          <cover-view  class='text'>%</cover-view>
      </cover-view>

      <cover-view class='middle'>至</cover-view>

      <cover-view class='input-wrapper' bindtap='tapInputOne'>
        <input placeholder="" maxlength="3" type="number" />
          <cover-view class='text' wx:if="inputInfoOne">{{inputInfoOne}}</cover-view>
          <input focus='{{inputFocusOne}}' bindblur='blurInputOne' placeholder="" maxlength="3" type="number" auto-focus />
          <cover-view  class='text'>%</cover-view>
      </cover-view>
    </cover-view>
  </cover-view>
</cover-view>