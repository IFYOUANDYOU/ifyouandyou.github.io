</view>

<cover-view class='setTop' wx:if="{{showTop}}">
  <cover-view class='wrapper'>
    <cover-view class='cancle' bindtap='cancle'>取消</cover-view>
    <cover-view class='right middle'>全班{{baseInfo.examNumber}}人,前</cover-view>
    <cover-view class='right cover-input' bindtap='tapInput'>
    <cover-view class='text' wx:if="inputInfo">{{inputInfo}}</cover-view>
    <input focus='{{inputFocus}}' bindblur='blurInput' placeholder="" maxlength="3" type="number" auto-focus /> </cover-view>
  </cover-view>
</cover-view>

