<view class='column-wrapper'>


  <view class='overview'>
    <view class='title'>
      <image mode="scaleToFill"  src="/image/cuotiji/gk.png"></image>概况
    </view>
  </view>

  <view class='info-wrapper'>
      <view class='content'>
        <view class='item'>
          <view>{{baseInfo.examNumber}}</view>
          <view>参考人数</view>
        </view>
        <view class='item'>
          <view>{{baseInfo.excellenceNumber}}</view>
          <view>优秀人数</view>
        </view>
        <view class='item'>
          <view>{{baseInfo.excellenceRate}}%</view>
          <view>及格人数</view>
        </view>
      </view>
  </view>

  <!-- <slot name="column"></slot> -->
  <view class="container-column">
    <ff-canvas id="column-dom-column" canvas-id="column-column" opts="{{ opts }}"></ff-canvas>
    <cover-view class='change-top' bindtap='changeTop'>
      <cover-view>前10平均</cover-view>
      <cover-view class='img'>
        <cover-image class='img' src="/image/cuotiji/top.png" />
        <cover-image class='img' mode="scaleToFill" src="/image/cuotiji/down.png" />
      </cover-view>
    </cover-view>
  </view>

  <view class='student-wrapper paddingBotom'>
    <view class='info'> <view></view>班级前5名</view>
    <view class='content'>
      <view class='item' wx:for="{{preStudentData}}" wx:key="{{index}}">
        <view>{{item.studentName}}</view>
        <view>{{item.score}}</view>
      </view>
    </view>
  </view>

  <view class='student-wrapper'>
    <view class='info'> <view></view>班级后5名</view>
    <view class='content'>
      <view class='item' wx:for="{{nextStudentData}}" wx:key="{{index}}">
        <view>{{item.studentName}}</view>
        <view>{{item.score}}</view>
      </view>
    </view>
  </view>
