.top_search .input_warpper input{
  font-size: 34rpx;
  margin-left: 20rpx;
  
}
.place-holder {
  color: #C4C8CC;
  font-size: 34rpx;
}

.section {
  position: fixed;
  bottom: 0;
  left: 0;
}