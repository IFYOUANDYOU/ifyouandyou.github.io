/* pages/wrongTopic/components/trendChart/trendChart.wxss */
.overview {
  margin-top: 24rpx;
}
.overview .title{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 88rpx;
    background:#F9FAFC;
    font-size:34rpx;
    font-weight:bold;
    padding-left: 25rpx;
    padding-right: 22rpx;
    box-sizing: border-box;
    color:rgba(29,32,35,1);
    border-radius:16rpx 16rpx 0 0;
}
.overview .title image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 16rpx;
}

.container-column {
  height: 600rpx;
  width: 100%;
} 
.column-wrapper {
  width: 690rpx;
  margin: 0 auto 20rpx;
  padding-top: 40rpx;
}
.student-info {
  width: 100%;
  padding-bottom: 41rpx;
  text-align: center;
  background-color: #fff;
  font-size:30rpx;
  color:rgba(29,32,35,1);
  border-radius: 0 0 16rpx 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.student-info .line{
  width:43rpx;
  height:2rpx;
  background:rgba(255,170,0,1);
  position: relative;
  margin-right: 12rpx;
}
.student-info .line::after{
  position: absolute;
  content: '';
  width:24rpx;
  height:24rpx;
  left: -26rpx;
  top: 50%;
  transform: translateY(-50%);
  background-color: #fff;
  border:2rpx solid rgba(255,170,0,1);
  border-radius:50%;
}