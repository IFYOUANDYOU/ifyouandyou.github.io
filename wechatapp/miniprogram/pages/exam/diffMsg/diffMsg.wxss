.container {
  background-color: rgba(235,240,245,1);
  position: fixed;
  height: 100%;
  width: 100%;
  left: 0;
  right: 0;
  overflow: scroll;
}
.header-wrapper {
  padding: 24rpx 30rpx 275rpx 30rpx;
}
.header-wrapper .title-wrapper{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header-wrapper .title-wrapper .watch {
  color: #5CB3FF;
  font-size: 28rpx;
  font-weight: bold;
}
.header-wrapper .title{
  font-weight: bold;
  font-size: 34rpx;
  color: #19191A;
}
.header:nth-child(1) {
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
}
.header:nth-child(2) {
  border-bottom-left-radius: 6rpx;
  border-bottom-right-radius: 6rpx;
}
.header {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #fff;
}
.header text{
  flex: 0 0 181rpx;
  height: 88rpx;
  font-size: 28rpx;
  line-height: 88rpx;
  color: #A1A2A6;
  padding-left: 23rpx;
}
.header input{
  flex: 1;
  color: #19191A;
  font-weight: bold;
  font-size: 28rpx;
  line-height: 88rpx;
  box-sizing: border-box;
}
.border-bottom {
  border-bottom: 1rpx solid #E1E3E6;
  box-sizing: border-box;
}
.header-table {
  width: 100%;
  border-radius: 0px 0px 16rpx 16rpx;
  background-color: #fff;
}
.header-table .thead{
  display: flex;
  justify-content: space-between;
  width: 100%;
  text-align: left;
  margin-top: 24rpx;
  border-top-left-radius: 6rpx;
  border-top-right-radius: 6rpx;
}
.header-table .thead{
  background-color: #fff;
}
.header-table .thead view{
  flex: 1;
  text-align: left;
  padding-left: 27rpx;
  height: 90rpx;
  line-height: 90rpx;
  color: #A1A2A6;
  font-size: 28rpx;
}
.header-table .thead view:nth-child(2) {
  flex:3;
}
.header-table .thead view:nth-child(3) {
  flex:2;
}
.header-table .thead view:nth-child(2){
  border-right: 1rpx solid #E1E3E6;
  box-sizing: border-box;
}

.header-table .tbody{
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.header-table .tbody view:nth-child(2) {
  flex:3;
}
.header-table .tbody view{
  flex: 1;
  text-align: left;
  padding-left: 33rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-top: 1rpx solid #E1E3E6;
  box-sizing: border-box;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  color: #818D99;
}
.header-table .tbody view:nth-child(2) image{
  height: 64rpx;
  width: 64rpx;
}
.header-table .tbody view:nth-child(3) {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 84rpx;
  flex:2;
}
.header-table .tbody view:nth-child(3) input {
  text-align: center;
  padding: 0;
  margin-left: 25rpx;
}
.header-table .tbody view:nth-child(3) .status {
  margin-right: 25rpx;
  margin-left: 22rpx;
}
.header-table .tbody view input{
  border: none;
  color: #19191A;
  flex:  0 0 40rpx;
  font-weight: bold;
}
