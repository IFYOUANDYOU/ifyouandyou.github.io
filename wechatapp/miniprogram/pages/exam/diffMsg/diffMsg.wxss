/* 悬浮按钮分数 */
.score-wrapper {
  position: fixed;
  z-index: 9;
  bottom: 0;
  left: 0;
  height: 167rpx;
  width: 100%;
  padding: 24rpx 30rpx  32rpx;
  box-sizing: border-box;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 16px 0px rgba(25,25,26,0.04), 0px 0px 24px 0px rgba(25,25,26,0.08);
}
.score-wrapper .score {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.score-wrapper .score .left{
  flex: 1;
  display: flex;
  align-items: center;
}
.score-wrapper .score .right{
  flex: 1;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.score-wrapper .score .left text , .score-wrapper .score .right text{
  color: #A1A2A6;
  font-size: 28rpx;
}
.score-wrapper .score .right .text {
  font-size:28rpx;
  font-weight:bold;
  color:rgba(25,25,26,1);
  margin: 0 24rpx 0 17rpx;
}
.score-wrapper .score .left input {
  width:124rpx;
  height:68rpx;
  color: #19191A;
  background:rgba(255,255,255,1);
  border:1rpx solid rgba(161,162,166,1);
  border-radius:6rpx;
  margin: 0 17rpx 0 23rpx;
  font-size: 30rpx;
}
.score-wrapper .info {
  width:100%;
  text-align: center;
  font-size:24rpx;
  color:#FF4053;
}
.score-wrapper .button {
  position: absolute;
  bottom: 0;
  left: 0;
  width:100%;
  height:96rpx;
  text-align: center;
  line-height: 96rpx;
  font-size: 34rpx;
  color: #FFF;
  background:linear-gradient(90deg,rgba(255,122,0,1) 0%,rgba(255,170,0,1) 100%);
}
.anser-preview {
  width:100%;
  height:300rpx;
  position: relative;
  margin-top: 32rpx;
  border-radius:16rpx 16rpx 0rpx 0rpx;
}
.anser-preview  .layer{
  position: absolute;
  top: 0;
  left: 0;
  width:100%;
  height:300rpx;
  background:rgba(29,32,35,1);
  opacity:0.24;
  border-radius:16rpx 16rpx 0rpx 0rpx;
}
.anser-preview  image {
  width:100%;
  height:300rpx;  
  border-radius:16rpx 16rpx 0rpx 0rpx;
}
.anser-preview .watch-origion {
  position: absolute;
  bottom: 24rpx;
  right: 24rpx;
  width:180rpx;
  height:64rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 64rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 4rpx 24rpx 0rpx rgba(29,32,35,0.08);
  opacity:0.8;
  border-radius:32rpx;
}