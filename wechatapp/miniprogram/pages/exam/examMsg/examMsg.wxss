.container .btn-wrapper .content{
  flex: 1;
  height:88rpx;
  line-height: 88rpx;
  text-align: center;
  box-sizing:border-box; 
  padding:2rpx; 
  border-radius:6rpx; 
  background-image:-webkit-linear-gradient(0deg, rgba(255,122,0,1), rgba(255,170,0,1));
  color:rgba(255,122,0,1);
}
.container .btn-wrapper .content view{
  width:100%; 
  height:100%; 
  border-radius:6rpx; 
  background:#fff;
}
.container .btn-wrapper .content view text{
  background: linear-gradient(to right, rgba(255,122,0,1), rgba(255,170,0,1));
  -webkit-background-clip: text;
  color: transparent;
  font-size: 32rpx;
}

.container .btn-wrapper .content:nth-child(2) {
  margin-left: 16rpx;
}