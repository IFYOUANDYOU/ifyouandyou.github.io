/* pages/wrongTopic/studentReport/studentReport.wxss */
.container {
    background: #EBF0F5;
    width: 100%;
    min-height: calc(100vh - 88rpx);
    padding: 23rpx 33rpx 52rpx 31rpx;
    box-sizing: border-box;
}
.top{
    height: 88rpx;
    background: #fff;
    padding: 0 56rpx 0 55rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}
.top .right{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.top .left {
  flex: 1;
    font-size: 34rpx;
    color: #1D2023;
    font-weight: bold;
}
.top .right {
  flex: 1;
    font-size: 32rpx;
    color: #FFAA00;
}
.top .left image{
    width: 32rpx;
    height: 32rpx;
    margin-left: 17rpx;
}
.top .right image{
    width: 29rpx;
    margin-left: 9rpx;
    height: 29rpx;
}

.overview .title{
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 88rpx;
    background:#F9FAFC;
    font-size:34rpx;
    font-weight:bold;
    padding-left: 25rpx;
    color:rgba(29,32,35,1);
    border-radius:16rpx 16rpx 0 0;
}
.overview .title image{
    width: 30rpx;
    height: 30rpx;
    margin-right: 16rpx;
}
.overview .content{
    width: 100%;
    height: 226rpx;
    background: #fff;
    border-radius:0 0 16rpx 16rpx;
}
.overview .content{
    padding:  0 26rpx 0 25rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}
.overview .content .item{
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: space-between;
}
.overview .content .item:not(:last-child){
    padding: 56rpx 0 57rpx;
}
.overview .content .item view:nth-child(1){
    font-size:48rpx;
    font-weight:bold;
    color:rgba(29,32,35,1);
}
.overview .content .item view:nth-child(2){
    font-size:28rpx;
    font-weight:400;
    color:rgba(29,32,35,1);
}
.overview .content .item image{
    width:51rpx;
    height:55rpx;
}
.overview .content .item:last-child{
    padding: 24rpx 0 57rpx;
}
.overview .content .item:last-child view{
    font-size:28rpx;
    font-weight:400;
    color:rgba(29,32,35,1);
}
.overview .content .item:last-child .icon{
    font-size:24rpx;
    font-weight:500;
    color:rgba(29,32,35,1);
}

.btn {
  width:622rpx;
  height:96rpx;
  line-height: 96rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(255,160,51,1) 0%,rgba(255,203,82,1) 100%);
  border-radius:48rpx;
  font-size:34rpx;
  font-weight:bold;
  color:rgba(254,254,254,1);
  margin: 52rpx auto 0rpx;
}
.left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.left input{
  flex: 0 0 100rpx;
}