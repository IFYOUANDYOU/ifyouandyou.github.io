/* pages/exam/confirmMsg/layer/layer.wxss */
.wrapper {
  position: fixed;
  width:100%;
  height:100%;
  top: 0;
  left: 0;
  background:rgba(29,32,35,.64);
}
.content {
  position: absolute;
 
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
.content .top{
  width: 660rpx;
  height: 314rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  background:rgba(92,179,255,1);
  border-radius:24rpx 24rpx 0 0;
}
.content .top view:nth-of-type(1){
  font-size: 34rpx;
  font-weight: bold;
  color: #fff;
}
.content .top view:nth-of-type(2){
  font-size: 28rpx;
  color: #fff;
  margin-top: 4rpx;
}
.content .top image {
  width:120rpx;
  height:120rpx;
  margin-top: 40rpx;
  margin-bottom: 36rpx;
}
.content .bottom{
  height: 302rpx;
  border-radius: 0 0 24rpx 24rpx;
  background:#fff;
}
.content .bottom image{
  width:32rpx;
  height:32rpx;
}
.content .bottom{
  text-align: center;
  padding-top: 4rpx;
}
.content .bottom .item {
  font-size:28rpx;
  color:rgba(29,32,35,1);
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight:bold;
}
.item-child {
  display: flex;
  align-items: center;
  justify-content: center;
  
}
.item-child image,.item-child .more {
  margin-left: 25rpx;
}
.content .bottom .active {
   color:rgba(92,179,255,1);
}
.more {
  height: 27rpx;
  line-height: 15rpx;
}