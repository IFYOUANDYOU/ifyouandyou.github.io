<!--pages/login/bindPhone/bindPhone.wxml-->
<view wx:if="{{status}}" class='wrapper animated {{status?"show slideInLeft":"slideOutRight"}}'>
  <view style='height:32rpx;'>
    <image class='close' mode="scaleToFill" src="/image/close.png" bindtap='close'/>
  </view>
  
  <view class='title'>绑定手机号码</view>
  <view class='info'>绑定后可查看成绩分析报告、使用评卷课件</view>
  <view class='warn'>请输入手机号码</view>
  <view class='input-wrapper {{inputType==1?"isFocus":""}}'>
    <input value='{{phone}}' maxlength="11" type="number" bindblur="bindKeyBlur" bindinput="bindKeyInput" bindfocus="setFirst"></input>
    <image mode="scaleToFill" bindtap='clearPhone' src="/image/clear.png"/>
  </view>
  <view class='input-wrapper {{inputType==2?"isFocus":""}}'>
    <input value='{{code}}' type="number" maxlength="6" placeholder='请输入验证码' bindinput="bindKeyInputCode" bindblur="bindKeyBlur" bindfocus="setSecond"></input>
    <view class="get-code" wx:if="{{codeTime<60&&codeTime!=0}}">{{codeTime}}s</view>
    <view class="get-code" wx:else  bindtap="getCode">获取验证码</view>
  </view>
  
  <view class='input-wrapper {{inputType==3?"isFocus":""}}' wx:if="{{isSchool}}">
    <input value='{{school}}' adjust-position="true" placeholder='请输入归属学校' bindinput="searchSchool" bindblur="bindKeyBlur" bindfocus="setThird"></input>
    <image mode="scaleToFill" src="/image/clear.png"/>
    <view class='school-wrapper' hidden='{{showSearch}}'>
      <view class='content'>
        <view class='item' wx:for="{{schoolList}}" data-info="{{item}}" bindtap='checkItem' wx:key="{{item}}">{{item.school_name}}</view>
      </view>
    </view>
  </view>

  <view class='submit' bindtap='submit'>确定</view>
</view>
