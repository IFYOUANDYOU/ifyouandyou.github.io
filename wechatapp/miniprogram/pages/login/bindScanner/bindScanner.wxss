.login-wrapper {
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
  padding: 80rpx 64rpx 0;
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex-direction: column;
}
.logo {
  height: 196rpx;
  width: 196rpx;
  margin-bottom: 48rpx;
}
.container {
  width: 630rpx;
  height: 504rpx;
  padding: 33rpx 40rpx 40rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 16rpx;
}
.container .title{
  color: #19191A;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 32rpx;
}
.container .item{
  height: 88rpx;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
 .container .item input{
  width:622rpx;
  height:88rpx;
  font-size: 34rpx;
  background:rgba(235,240,245,1);
  border-radius:16rpx;
  padding-left: 33rpx;
 }
.container .item .icon-1{
  flex: 0 0 24rpx;
  height: 32rpx;
}
.container .item .icon-2{
  flex: 0 0 32rpx;
  height: 26rpx;
}
.submit-con {
  width:550rpx;
  height:96rpx;
  color: #fff;
  font-size: 32rpx;
  margin: 64rpx 0 48rpx;
  line-height: 96rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(255,122,0,1) 0%,rgba(255,170,0,1) 100%);
  border-radius:16rpx;
}
.submit-con-two {
  width:550rpx;
  height:96rpx;
  color: #fff;
  font-size: 32rpx;
  margin: 64rpx 0 48rpx;
  line-height: 96rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(255,122,0,1) 0%,rgba(255,170,0,1) 100%);
  opacity: .4;
  border-radius:16rpx;
}
.cancle-con {
  width:550rpx;
  text-align: center;
  font-size: 32rpx;
  color: #A1A2A6;
}


.input-wrapper {
  position: relative;
  height: 88rpx;
  padding-left: 33rpx;
  padding-right: 25rpx;
  border-radius: 16rpx;
  background-color: #EBF0F5;
  display: flex;
  justify-content: space-between;
  /* padding: 60rpx 0 31rpx; */
  align-items: center;
  font-size: 34rpx;
  box-sizing: border-box;
}
.input-wrapper .get-code{
  color: #FFAA00;
  font-size: 28rpx;
}
.input-wrapper input{
  font-size: 34rpx;
}
.input-wrapper image{
  width: 32rpx;
  height: 32rpx;
}
.school-wrapper {
  position: absolute;
  left: 0;
  bottom: 100rpx;
  z-index: 9999;
  color: #1D2023;
  font-size: 34rpx;
  width: 100%;
  max-height: 400rpx;
  overflow: scroll;
  background: #fff;
  box-shadow:0rpx -4rpx 32rpx 0rpx rgba(29,32,35,0.08);
  border-radius:16rpx 16rpx 0rpx 0rpx;
}
.school-wrapper .content{
  height: 100%;
  width: 100%;
  background: #fff;
}
.school-wrapper .item{
  padding: 29rpx 0 27rpx;
  background-color: #fff;
  padding-left: 33rpx;
  border-bottom: 1px solid #EBF0F5;
}
.school-info {
  font-size:28rpx;
  font-weight:400;
  color:rgba(129,141,153,1);
  line-height:54rpx;
}

.show-info {
  width: 100%;
  height: 100vh;
  display: flex;
  /* justify-content: space-between; */
  align-items: center;
  flex-direction: column;
}
.show-info image{
  width:160rpx;
  height:160rpx;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}
.show-info view:nth-of-type(1){
  font-size:34rpx;
  font-weight:bold;
  color:rgba(29,32,35,1);
  margin-bottom: 22rpx;
}
.show-info view:nth-of-type(2){
  font-size:28rpx;
  color:rgba(129,141,153,1);
}