/* pages/home/home.wxss */
@import "../components/footer/footer.wxss";
@import "../score/scoreAnalyze/scoreAnalyze.wxss";
.container-column {
  height: 200px;
  width: 100%;
} 
page {
  background-color:  #EBF0F5;
}
.canvas {
  width: 100%;
  height: 200px;
  border-radius: 5rpx;
  margin-top: 10rpx;
  background-color: #fff;
}
.footer {
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 24rpx;
  font-weight: 500;
  color: #A1A2A6;
}
.footer-wrapper {
  height: 100%;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.footer-wrapper .img{
  position: relative;
  padding-bottom: 15rpx !important;
}
.footer-wrapper .img .half-circle {
  border-radius: 96rpx 96rpx 0 0;  
  height: 48rpx;  
  width: 96rpx;  
  position: absolute;
  z-index: 1;
  top: -25rpx;
  left: 50%;
  background-color: #fff;
  transform: translateX(-50%);
}
.footer-wrapper .img image{
  width: 80rpx !important;
  height: 80rpx !important;
  position: absolute;
  z-index: 2;
  top: -17rpx;
  left: 50%;
  background: #fff;
  border-radius: 50%;
  transform: translateX(-50%);
}
.footer-wrapper .item{
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  flex-direction: column;
  padding-bottom: 12rpx !important;
}
.footer-wrapper .item image{
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 8rpx;
}

